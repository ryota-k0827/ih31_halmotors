<!-- クレカ登録画 -->
<meta charset="utf-8"/>
<%- include('../partials/header.ejs') %>
<style>
    .card_register{
        text-align: center;
    }
    h2{
        margin-top: 100px;
        margin-bottom: 50px;
        color: #000;
    }
    .expiration_date{
        margin-right: 30px;
    }
    h3{
        margin-bottom: 50px;
    }
    .card img{
        width: 300px;
        height: auto;
    }
    input{
        width : 160px;
        height: 25px;
    }
    #security_code{
        margin-bottom: 20px;
    }   
    button{
        background-color: #00bfff;
        padding: 16px 50px;
    }
</style>
<body>
    <!-- どこに遷移すればいいかわからなかったのでactionの書き換えよろしくお願いします！！！ -->
    <form
        action=""
        method="POST"
        class="font-sans text-sm rounded w-full max-w-md mx-auto my-8 px-8 pt-6 pb-8"
    >
        <div class="card_register">
            <h2>お支払い画面</h2>
            <h3>お支払いにご利用されるクレジットカード情報をお間違いないようお願いします。</h3>
            <div class="card">
                <h5>使用できるカード一覧</h5>
                <img src="/public/img/card.png">
            </div>
            <div>
                <!-- カード番号 -->
                <p>カード番号</p>
                <input id="number" type="number" style="border: 2px solid #000" required/>
                <!-- 有効期限 -->
                <p>有効期限</p>
                <input id="expiration_date" type="date" style="border: 2px solid #000" required/>
                <p>セキュリティコード</p>
                <input id="security_code" type="number" style="border: 2px solid #000" maxlength="16" required/>
            </div>
            <button type="submit">支払う</button>
        </div>
    </form>
</body>
</html>
<%- include('../partials/footer.ejs') %>